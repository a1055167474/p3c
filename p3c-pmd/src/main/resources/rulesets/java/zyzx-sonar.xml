    <rule name="MethodParameterCountRule"
        message="java.zyzx.MethodParameterCountRule.violation.msg"
        class="com.alibaba.p3c.pmd.lang.java.rule.zyzx.MethodParameterCountRule">
        <priority>1</priority>
        <example>
        <![CDATA[
Negative example:
   public class ssss{
	    public void methodB(int a,int b,int c,int d,int e,int f,int g,int h){
   }
   }
        ]]>
        </example>
        <example>
        <![CDATA[

Positive example：
   public class ssss{
	    public void methodA(Obj o){
   }
   }
         ]]>
        </example>
    </rule>

    <rule name="ArithmeticOperatorCheck"
          language="java"
          message="java.zyzx.ArithmeticOperatorCheck.rule.msg"
          class="com.alibaba.p3c.pmd.lang.java.rule.zyzx.ArithmeticOperatorCheck">
        <priority>3</priority>
        <example>
            <![CDATA[
Negative example:
        b =+ a;
        b =- a;
        ]]>
        </example>
        <example>
            <![CDATA[
Positive example：
        b += a;
        b -= a;
        b = a;
         ]]>
        </example>
    </rule>


    <rule name="SillyEqualsCheck"
          language="java"
          message="java.zyzx.SillyEqualsCheck.rule.msg"
          class="com.alibaba.p3c.pmd.lang.java.rule.zyzx.SillyEqualsCheck">
        <priority>2</priority>
        <example>
            <![CDATA[
Negative example:

